<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs")%>
    <style>
      article {
        padding: 10px;
      }
      img {
        max-width: 250px;
        max-height: 250px;
        transition: all 0.5s;
      }
      img:hover {
        transform: rotate(15deg);
      }
      .col {
        margin: auto;
      }
    </style>
  </head>
  <body>
    <div class="containter valign center">
      <h1 class="white-text">Wonky Hats</h1>
      <div class="container">
        <a href="/products/new" class="btn">Add New Hat</a>
      </div>
      <br />
      <div class="row valign-wrapper">
        <div class="col s10 m6 l4">
          <% products.forEach((product,index)=>{%>
          <a href="/products/<%=product._id%>" class="black-text"
            ><article class="card hoverable cyan lighten-4">
              <h3><%=product.name%></h3>
              <img src="<%=product.img%>" alt="<%=product.name%>" /></article
          ></a>
          <br />
          <%})%>
        </div>
      </div>
    </div>
  </body>
</html>
