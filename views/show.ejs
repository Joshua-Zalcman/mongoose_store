<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head.ejs")%>
    <style>
      article {
        max-width: 360px;
      }
      .card {
        margin: 0 auto;
      }
    </style>
  </head>
  <body>
    <div class="container valign center">
      <h1 class="white-text">Wonky Hats</h1>
      <div class="row">
        <div class="col s12">
          <br />
          <article class="card hoverable cyan lighten-4">
            <div class="card-image">
              <img
                class="white"
                src="<%=product.img%>"
                alt="<%=product.name%>"
              />
              <%if(product.qty>0){%>

              <form
                action="/products/<%=product._id%>?_method=PUT"
                method="POST"
              >
                <input
                  type="text"
                  name="name"
                  value="<%=product.name%>"
                  hidden="true"
                />
                <input
                  type="text"
                  name="description"
                  value="<%=product.description%>"
                  hidden="true"
                />
                <input
                  type="text"
                  name="img"
                  value="<%=product.img%>"
                  hidden="true"
                />
                <input
                  type="number"
                  name="price"
                  value="<%=product.price%>"
                  hidden="true"
                /><input
                  type="number"
                  name="qty"
                  value="<%=product.qty-1%>"
                  hidden="true"
                />
                <input
                  type="submit"
                  value="Buy"
                  class="btn-floating halfway-fab btn-large cyan darken-3"
                />
              </form>

              <%}else{%>
              <p>Out Of Stock</p>

              <%}%>
            </div>
            <h1 class="card-title"><%=product.name%></h1>
            <div class="card-content">
              <p><%=product.description%></p>
              <br />
              <p>Price: $<%=product.price%></p>
              <p>Quantity: <%=product.qty%></p>
            </div>
            <div class="container">
              <div class="row">
                <div class="col s4">
                  <form
                    action="/products/<%=product._id%>?_method=DELETE"
                    method="POST"
                  >
                    <input
                      type="submit"
                      value="Delete"
                      class="btn red btn-block"
                    />
                  </form>
                </div>
                <div class="col s8">
                  <a
                    href="/products/<%=product._id%>/edit"
                    class="btn btn-block yellow darken-4"
                    >Edit</a
                  >
                </div>
              </div>
            </div>
            <br />
          </article>
        </div>
      </div>
      <a href="/products" class="btn">Go Back</a>
    </div>
    <br />
  </body>
</html>
